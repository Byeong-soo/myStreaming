<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.BookmarkMapper">
  
  
  <!-- 글번호 가져오기 -->
	<select id="getNextNum" resultType="int">
 	<![CDATA[
 		SELECT IFNULL(MAX(num),0) + 1 AS nextnum
 		FROM bookmark
 	]]>
	</select>
  
  
  <!-- 모든북마크 가져오기 -->
  <select id="getBookmarksAll" resultMap="bookmarkVO">
  	<![CDATA[
  		SELECT * FROM bookmark
  		
  	]]>
  </select>
  
  <!-- 북마크 하나 추가하기 -->
  <insert id="addBookmark">
  	<![CDATA[
 		INSERT INTO bookmark(num,mid,name,type,url)
 		VALUES(#{num}, #{mid}, #{name}, #{type}, #{url})
 		
 	]]>
  </insert>
  
  <!-- 북마크 아이디로 조회하기 -->
  <select id="getBookmarkById" resultMap="bookmarkVO">
		<![CDATA[
			SELECT * FROM bookmark WHERE mid = #{mid}
		]]>
</select>



	
	
  
  
  
  
  
  
  
  
</mapper>