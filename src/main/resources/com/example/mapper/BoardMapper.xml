<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.example.BoardMapper">

	<delete id="deleteBoardNyNum">
		<!-- CDATA 안에 있는 쿼리문 내용중 괄호나 특수문자를 XML parser로 인식 하지 않고 문자열로 인식 -->
 	<![CDATA[
 		DELETE FROM board WHERE num = #{num}
 	]]>
	</delete>

	<!-- 전체 글 개수 가져오기 -->
	<!-- select 문장일 때는 resultType 속성으로 가져올 자료형을 지정해야 한다. -->
	<select id="getCountAll" resultType="int">
 	<![CDATA[
 		SELECT COUNT(*)AS cnt
 		FROM board
 	]]>
	</select>

	<!-- 그다음 글번호 가져오기 -->
	<select id="getNextNum" resultType="int">
 	<![CDATA[
 		SELECT IFNULL(MAX(num),0) + 1 AS nextnum
 		FROM board
 	]]>
	</select>

	<!-- 주글 쓰기 -->
	<insert id="addBoard">
 	<![CDATA[
 		INSERT INTO board(num,mid,subject,content,readcount,reg_date,re_ref,re_lev,re_seq)
 		VALUES(#{num}, #{mid}, #{subject}, #{content}, #{readcount}, #{regDate}, #{reRef}, #{reLev}, #{reSeq})
 		
 	]]>
	</insert>

	<!-- 페이징 없이 글 가져오기 -->
	<!-- resultType 원래는 com.example.BoardVO이지만, Mybatis에 설정 해놓음 -->
	<select id="getBoardsAll" resultType="boardVO">
 	<![CDATA[
 		SELECT * 
		FROM board 
		ORDER BY re_ref DESC, re_seq ASC
 	]]>

	</select>

	<!-- 조회수 1 증가 시키기 -->
	<!-- 넘어오는 값이 한개 이기 때문에 num 자리에 #{aaa}를 해도 되지만 mybatis는 이름을 기억하는게 아니다. -->
	<update id="updateReadcount">
	<![CDATA[
		UPDATE board
		SET readcount =  readcount +1 
		WHERE num = #{num} 
	]]>
	</update>

	<!-- 게시글 수정하기 -->
	<update id="updateBoard">
	<![CDATA[
		UPDATE board
		SET subject =  #{subject}, content = #{content} 
		WHERE num = #{num}
	]]>
	</update>

	<!-- 답글쓰기 -->
	<update id="updateReSeqPlusOne">
	<![CDATA[
		UPDATE board
		SET re_seq =  re_seq +1
		WHERE re_ref = {reRef}
	]]>
	</update>

	<!--검색어가 적용된 전체 글 개수 가져오기 -->
	<select id="getCountBySearch" resultType="int">
	<![CDATA[
		SELECT COUNT(*) AS cnt
		FROM board
	]]>
		<where>
			<if test="type == 'subject'.toString()">
				subject LIKE CONCAT('%',#{keyword},'%')
			</if>
			<if test="type == 'content'.toString()">
				subject LIKE CONCAT('%',#{keyword},'%')
			</if>
			<if test="type == 'mid'.toString()">
				subject LIKE CONCAT('%',#{keyword},'%')
			</if>
		</where>
	</select>

	<!-- 페이징으로 글 가져 오기 -->
	<select id="getBoardsWithPaging" resultType="boardVO">
		<![CDATA[
			SELECT * 
			FROM board 
		]]>
		<where>
			<if test="type == 'subject'.toString()">
				subject LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="type == 'content'.toString()">
				content LIKE CONCAT('%', #{keyword}, '%')
			</if>
			<if test="type == 'mid'.toString()">
				mid LIKE CONCAT('%', #{keyword}, '%')
			</if>
		</where>
		<![CDATA[
			ORDER BY re_ref DESC, re_seq ASC 
			LIMIT #{startRow}, #{amount} 
		]]>
	</select>

	<select id="getBoard" resultType="boardVO">
 	 <![CDATA[ 
 	 	SELECT * 
		FROM board
		WHERE num = #{num} 
		]]>
	</select>

</mapper>